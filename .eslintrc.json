{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "@socialgouv/eslint-config-react",
    "@socialgouv/eslint-config-typescript"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "."
        ]
      }
    }
  },
  "rules": {
    "@typescript-eslint/naming-convention": "off", // TS linter suggests camelCase for React Components
    "@typescript-eslint/no-explicit-any": "off",
    "typescript-eslint/no-shadow": "off"
  }
}
